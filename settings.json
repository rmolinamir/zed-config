// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "agent": {
    "default_model": {
      "model": "gpt-4o",
      "provider": "openai"
    },
    "inline_assistant_model": {
      "model": "gpt-5-mini",
      "provider": "openai"
    },
    "model_parameters": []
  },
  "agent_servers": {
    "opencode": {
      "default_config_options": {},
      "default_model": "openai/gpt-5.2-codex",
      "favorite_config_option_values": {},
      "favorite_models": [
        "openai/gpt-5.3-codex",
        "openai/gpt-5.3-codex/xhigh",
        "openai/gpt-5.3-codex/high",
        "openai/gpt-5.3-codex/low",
        "openai/gpt-5.3-codex/medium"
      ],
      "type": "extension"
    }
  },
  "base_keymap": "VSCode",
  "buffer_font_size": 15.0,
  "colorize_brackets": true,
  "git_panel": {
    "tree_view": true
  },
  "global_lsp_settings": {
    "semantic_token_rules": [
      {
        "style": ["type"],
        "token_type": "class"
      },
      {
        "style": ["type"],
        "token_type": "interface"
      },
      {
        "style": ["type"],
        "token_type": "enum"
      },
      {
        "style": ["type"],
        "token_type": "typeParameter"
      },
      {
        "style": ["function"],
        "token_type": "function"
      },
      {
        "style": ["keyword"],
        "token_modifiers": ["declaration"],
        "token_type": "keyword"
      }
    ]
  },
  "icon_theme": "Material Icon Theme",
  "indent_guides": {
    "background_coloring": "indent_aware",
    "coloring": "indent_aware"
  },
  "languages": {
    "CSS": {
      "language_servers": [
        "!vscode-css-language-server",
        "tailwindcss-intellisense-css",
        "..."
      ]
    },
    "JavaScript": {
      "code_actions_on_format": {
        "source.fixAll.biome": true
      },
      "formatter": [
        {
          "language_server": {
            "name": "biome"
          }
        }
      ],
      "language_servers": [
        "!tsgo",
        "!typescript-language-server",
        "vtsls",
        "..."
      ]
    },
    // `tsconfig.json` files are treated as JSONC. See: https://github.com/helix-editor/helix/pull/12031
    "JSONC": {
      "code_actions_on_format": {
        "source.fixAll.biome": true
      },
      "formatter": [
        {
          "language_server": {
            "name": "biome"
          }
        }
      ]
    },
    "TSX": {
      "code_actions_on_format": {
        "source.fixAll.biome": true
      },
      "formatter": [
        {
          "language_server": {
            "name": "biome"
          }
        }
      ],
      "language_servers": [
        "!tsgo",
        "!typescript-language-server",
        "vtsls",
        "..."
      ]
    },
    "TypeScript": {
      "code_actions_on_format": {
        "source.fixAll.biome": true
      },
      "formatter": [
        {
          "language_server": {
            "name": "biome"
          }
        }
      ],
      "language_servers": [
        "!tsgo",
        "!typescript-language-server",
        "vtsls",
        "..."
      ]
    }
  },
  "lsp": {
    "biome": {
      "settings": {
        "require_config_file": true
      }
    },
    "tailwindcss-language-server": {
      "settings": {
        "classFunctions": ["cva", "cx"],
        "experimental": {
          "classRegex": ["[cls|className]\\s\\:\\=\\s\"([^\"]*)"]
        }
      }
    },
    "vtsls": {
      "enable_lsp_tasks": true,
      "settings": {
        "javascript": {
          "updateImportsOnFileMove": {
            "enabled": "always"
          }
        },
        "typescript": {
          "updateImportsOnFileMove": {
            "enabled": "always"
          }
        }
      }
    }
  },
  "lsp_document_colors": "background",
  "minimap": {
    "show": "auto"
  },
  "minimum_contrast_for_highlights": 70.0,
  "semantic_tokens": "combined",
  "show_edit_predictions": true,
  "sticky_scroll": {
    "enabled": true
  },
  "tab_size": 2,
  "tasks": {
    "prefer_lsp": true
  },
  "terminal": {
    "env": {},
    "font_family": "MesloLGS NF",
    "font_size": 14.0
  },
  "theme": {
    "dark": "Curzed (Dark)",
    "light": "One Light",
    "mode": "dark"
  },
  "ui_font_size": 16
}
